<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ericm_000.popularmovies.MovieDetailFragment"
    android:weightSum="1">

    <!-- TODO emorand why would I import this in the fragment ? -->
    <include android:id="@+id/toolbar_movie_detail" layout="@layout/toolbar" />

    <!--
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/textview_movie_detail_title"
        android:layout_gravity="center" />
        -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageview_movie_detail"
            android:scaleType="centerCrop"
            android:layout_width="185dp"
            android:layout_height="246dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/imageview_movie_detail_contentdescription" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_movie_detail_releasedate"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_movie_detail_popularity"
                android:layout_gravity="center" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_movie_detail_overview"
        android:layout_gravity="center" />

</LinearLayout>
